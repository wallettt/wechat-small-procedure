<map id="myMap" longitude="{{longitude}}" latitude="{{latitude}}" scale="18"  polyline="{{polyline}}" show-location="true" style="width: 100%; height: 70%;"  markers="{{markers}}"></map>
<button bindtap="start">开始</button>
<button bindtap="end">结束</button>
<button bindtap="locate">定位</button>
<text>\n里程数：{{meters}}km</text>
<text>\n\n时间：{{time}}</text>